{
  "tickets": {
    "klass": "tickets",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    }
  },
  "auths": {
    "klass": "auths",
    "query": {
      "_id": "{{ _id }}"
    }
  },
  "superusers": {
    "klass": "users",
    "query": {
      "app_id": "{{ app_id }}",
      "superuser": true
    },
    "projection": {
      "_id": 1,
      "superuser_level": 1,
      "email": 1,
      "ticket_relay_ids": 1,
      "closed_ticket_relay_ids": 1
    }
  }
}