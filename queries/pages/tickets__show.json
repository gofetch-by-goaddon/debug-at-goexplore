{
  "tickets": {
    "klass": "tickets",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    }
  },
  "auths": {
    "klass": "auths",
    "query": {
      "_id": "{{ _id }}"
    }
  },
  "superusers": {
    "klass": "users",
    "query": {
      "project_id": "{{ project_id }}",
      "superuser": true
    },
    "projection": {
      "_id": 1,
      "email": 1
    }
  }
}