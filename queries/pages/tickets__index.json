{
  "tickets": {
    "klass": "tickets",
    "query": {
      "status": "{{ status }}"
    },
    "projection": {
      "_id": 1,
      "relay_id": 1,
      "webshop_id": 1,
      "auth_id": 1,
      "company_id": 1,
      "status": 1,
      "opened_at": 1,
      "closed_at": 1
    }
  },
  "relay_tickets": {
    "klass": "tickets",
    "query": {
      "status": "{{ status }}",
      "relay_id": {"$in": "{{ relay_ids }}"}
    },
    "projection": {
      "_id": 1,
      "relay_id": 1,
      "webshop_id": 1,
      "auth_id": 1,
      "company_id": 1,
      "status": 1,
      "opened_at": 1,
      "closed_at": 1
    }
  },
  "companies": {
    "klass": "companies",
    "query": {
      "_id": {"$in": "{{ company_ids }}"}
    },
    "projection": {
      "_id": 1,
      "website": 1
    }
  }
}