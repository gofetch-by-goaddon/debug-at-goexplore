{
  "tickets": {
    "klass": "tickets",
    "query": {
      "company_id": "{{ company_id }}",
      "_id": "{{ _id }}"
    },
    "projection": {
      "_id": 1,
      "mail_address": 1,
      "superuser_id": 1,
      "relay_id": 1,
      "log": 1
    }
  },
  "superusers": {
    "klass": "users",
    "query": {
      "app_id": "{{ app_id }}",
      "superuser": true
    },
    "projection": {
      "_id": 1,
      "email": 1
    }
  },
  "update_ticket": {
    "klass": "tickets",
    "query": {
      "_id": "{{ _id }}"
    },
    "document": "{{ document }}"
  }
}